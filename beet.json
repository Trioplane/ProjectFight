{
    "name": "ProjectFight",
    "description": "WIP",
    "version": "v0.0.1",
    "author": "Trplnr",
    "data_pack": {
      "load": ["./libs/*"]
    },
    "resource_pack": {
      "load": ["./libs/*"]
    },
    "pipeline": [
      {
        "require": ["bolt"],
        "data_pack": {
          "load": ["./src"],
          "pack_format": 81,
          "filter": {
            "block": [
              { "namespace": "minecraft", "path": "recipe/.*" },
              { "namespace": "minecraft", "path": "advancement/.*" }
            ]
          }
        },
        "resource_pack": {
          "load": ["./src"],
          "zipped": true,
          "pack_format": 64
        },
        "pipeline": ["mecha"],
        "meta": {
          "bolt": {"entrypoint": "projectfight:*"}
        }
      }
    ],
    "output": "./build"
}